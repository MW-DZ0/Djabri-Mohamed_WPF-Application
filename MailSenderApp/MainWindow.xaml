<Window x:Class="MailSenderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cours Programmation Complémentaire - Menu Principal" 
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_Applications">
                <MenuItem Header="Envoi d'Email" Click="MenuEmail_Click"/>
                <MenuItem Header="Cahier des Charges (To-Do List)" Click="MenuToDo_Click"/>
                <Separator/>
                <MenuItem Header="Quitter" Click="MenuQuitter_Click"/>
            </MenuItem>
            <MenuItem Header="_Aide">
                <MenuItem Header="À propos" Click="MenuAPropos_Click"/>
            </MenuItem>
        </Menu>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Bienvenue dans l'application WPF" 
                           FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Sélectionnez une application :" 
                           FontSize="16" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Boutons d'accès rapide -->
                <Button Content="📧 Gestionnaire d'Email" 
                        Height="60" Width="300" Margin="0,10"
                        FontSize="16" FontWeight="Bold"
                        Background="#4CAF50" Foreground="White"
                        Click="MenuEmail_Click" Cursor="Hand"/>

                <Button Content="✓ Cahier des Charges (To-Do List)" 
                        Height="60" Width="300" Margin="0,10"
                        FontSize="16" FontWeight="Bold"
                        Background="#2196F3" Foreground="White"
                        Click="MenuToDo_Click" Cursor="Hand"/>

                <Button Content="❌ Quitter" 
                        Height="40" Width="150" Margin="0,30,0,0"
                        FontSize="14"
                        Background="#F44336" Foreground="White"
                        Click="MenuQuitter_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>