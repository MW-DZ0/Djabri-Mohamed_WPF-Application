<Window x:Class="MailSenderApp.CommunicationRéseau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSenderApp"
        mc:Ignorable="d"
        Title="CommunicationRéseau" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_Communication">
                <MenuItem Header="Listener/Client">
                    <MenuItem Header="Écouter" Click="MenuListenerEcouter_Click"/>
                    <MenuItem Header="Connecter" Click="MenuListenerConnecter_Click"/>
                </MenuItem>
                <MenuItem Header="UDP">
                    <MenuItem Header="Écouter" Click="MenuUdpEcouter_Click"/>
                    <MenuItem Header="Connecter" Click="MenuUdpConnecter_Click"/>
                </MenuItem>
                <MenuItem Header="Socket">
                    <MenuItem Header="Écouter" Click="MenuSocketEcouter_Click"/>
                    <MenuItem Header="Connecter" Click="MenuSocketConnecter_Click"/>
                    <MenuItem Header="Déconnecter" Click="MenuSocketDeconnecter_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Utilitaire">
                <MenuItem Header="Vérifier" Click="MenuVerifier_Click"/>
            </MenuItem>
        </Menu>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Champ Serveur -->
            <StackPanel Grid.Row="0" Margin="0,5">
                <Label Content="Serveur :" FontWeight="Bold"/>
                <TextBox x:Name="txtServeur" Height="30" FontSize="14"
                         Text="localhost"
                         ToolTip="Entrez le nom du serveur ou l'adresse IP"/>
            </StackPanel>

            <!-- Champ IP (non modifiable) -->
            <StackPanel Grid.Row="1" Margin="0,5">
                <Label Content="IP :" FontWeight="Bold"/>
                <TextBox x:Name="txtIP" Height="30" FontSize="14"
                         IsReadOnly="True"
                         Background="#F0F0F0"
                         ToolTip="Adresse IP du serveur (détectée automatiquement)"/>
            </StackPanel>

            <!-- Champ Message -->
            <StackPanel Grid.Row="2" Margin="0,5">
                <Label Content="Message :" FontWeight="Bold"/>
                <TextBox x:Name="txtMessage" Height="30" FontSize="14"
                         ToolTip="Entrez le message à envoyer"/>
            </StackPanel>

            <!-- Bouton Envoyer -->
            <Button Grid.Row="3" x:Name="btnEnvoyer" 
                    Content="📤 Envoyer" 
                    Height="40" Margin="0,15,0,15"
                    FontSize="14" FontWeight="Bold"
                    Background="#2196F3" Foreground="White"
                    Click="btnEnvoyer_Click"
                    Cursor="Hand"/>

            <!-- Champ Échanges -->
            <StackPanel Grid.Row="4" Margin="0,5">
                <Label Content="Échanges :" FontWeight="Bold"/>
                <TextBox x:Name="txtEchanges" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="#F9F9F9"
                         ToolTip="Historique des échanges réseau"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
